<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/qwe">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btnbrg"
        android:padding="10dp"
        android:radius="20dp"
        android:shadowColor="#eee"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="40"
        android:text="logout"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:transformPivotX="@dimen/cardview_compat_inset_shadow"
        android:transitionName="@string/fab_transformation_scrim_behavior"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898" />


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/login"
        android:cropToPadding="true"
        android:fitsSystemWindows="true"
        android:id="@+id/btn5"
        android:background="@drawable/arc"

    android:transformPivotX="@dimen/cardview_compat_inset_shadow"
        android:transitionName="@string/fab_transformation_scrim_behavior"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_grad_background"
        android:padding="10dp"
        android:radius="20dp"
        android:shadowColor="#eee"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="40"
        android:text="vendor"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:transformPivotX="@dimen/cardview_compat_inset_shadow"
        android:transitionName="@string/fab_transformation_scrim_behavior"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.336" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_grad_background"
        android:padding="10dp"
        android:radius="20dp"
        android:shadowColor="#eee"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="40"
        android:text="buyer"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:transformPivotX="@dimen/cardview_compat_inset_shadow"
        android:transitionName="@string/fab_transformation_scrim_behavior"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

</androidx.constraintlayout.widget.ConstraintLayout>